<Page x:Class="CryptoDataWpf.Pages.CurrencyData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoDataWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CurrencyData">

    <Page.Resources>
        <Style x:Key="RowStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="10,20"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Page.Resources>
    <Grid Background="{StaticResource Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Currency data" Margin="20,10" Foreground="{DynamicResource Surface}" FontWeight="DemiBold"  FontSize="25"/>
        <StackPanel Grid.Row="1" >
            <TextBlock Style="{StaticResource RowStyle}" Text="{Binding Currency.Symbol }" Foreground="{DynamicResource Surface}" FontWeight="Bold" FontSize="60" />
        </StackPanel>
    </Grid>
</Page>
